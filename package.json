{
  "name": "pr-faq-assistant",
  "version": "1.0.0",
  "description": "AI-assisted PR-FAQ document generator optimized for pr-faq-validator compatibility",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bordenet/pr-faq-assistant.git"
  },
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:assistant": "NODE_OPTIONS='--experimental-vm-modules' jest assistant/tests/",
    "test:validator": "NODE_OPTIONS='--experimental-vm-modules' jest validator/tests/",
    "test:e2e": "playwright test",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "lint": "eslint assistant/js/ validator/js/",
    "lint:fix": "eslint assistant/js/ validator/js/ --fix",
    "format": "eslint assistant/js/ validator/js/ --fix",
    "quality": "npm run lint && npm run test:coverage",
    "serve": "python3 -m http.server 8080",
    "deploy": "./scripts/deploy-web.sh",
    "prepare": "command -v pre-commit >/dev/null 2>&1 && pre-commit install || echo 'pre-commit not installed, skipping hook setup'"
  },
  "keywords": [
    "pr-faq",
    "press-release",
    "ai-assisted",
    "workflow",
    "amazon-style"
  ],
  "author": "Matt J Bordenet",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.58.1",
    "eslint": "^9.39.2",
    "fake-indexeddb": "^6.2.5",
    "globals": "^17.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "bugs": {
    "url": "https://github.com/bordenet/pr-faq-assistant/issues"
  },
  "homepage": "https://bordenet.github.io/pr-faq-assistant/"
}
